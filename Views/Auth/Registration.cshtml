@model RegistrationViewModel
<partial name="_Header" />
<div class="container mt-4 CreatePatientRequest">

    <form method="post" enctype="multipart/form-data">


        <div class="row outer-container shadow-lg m-2 mt-4 p-1 ">
            <div class="col m-2">
                <h4 class="">Employee information</h4>

                <div class="row columns ">
                    <div class="col-md-6 mt-4">
                        <div class=" form-floating floating-label">
                            <input type="text" class="form-control" pattern="[A-Za-z]{1,32}" placeholder="First Name" asp-for="FirstName">
                            <label for="floatingInput">First name <sup class="link-danger">*</sup></label>
                            <span asp-validation-for="FirstName" style="color:red"></span>
                        </div>


                    </div>
                    <div class="col-md-6 mt-4">
                        <div class=" floating-label form-floating">
                            <input type="text" class="form-control" pattern="[A-Za-z]{1,32}" placeholder="Last name" asp-for="LastName">

                            <label for="floatingInput">Last name <sup class="link-danger">*</sup></label>
                            <span asp-validation-for="LastName" style="color:red"></span>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="mt-4 col-lg-6 col-md-12 col-12 ">
                        <div class="floating-label form-floating">
                            <input type="date" max="@DateTime.Now.ToString("yyyy-MM-dd")" min="1900-01-01" class="form-control" id="Editshiftdate" placeholder="Date of birth" asp-for="DateOfBirth">
                            <label for="floatingInput">Date of birth </label>
                            <span asp-validation-for="DateOfBirth" id="shift-date-error" style="color:red"></span>
                        </div>

                    </div>
                </div>
                <h4 class="mt-4 ">Employee contact information</h4>
                <div class="row " id="loginForm">
                    <div class="col-lg-6 mt-4">
                        <div class="form-floating px-1 ">
                            <input type="email" class="form-control" id="patient-form-email" placeholder="name@example.com" asp-for="Email" />
                            <label for="floatingInputemail">Email address <sup class="link-danger">*</sup></label>
                            <span asp-validation-for="Email" style="color:red"></span>
                        </div>
                    </div>

                    @*  <div class="col-lg-6 mt-4 hidden-pass ">
                    <div class="form-floating  grey-back px-1 passwordFields">
                    <input type="password" class=" form-control" id="patient-password" placeholder=" Password" asp-for="Password">
                    <label for="floatingInput">Password <sup class="link-danger">*</sup></label>
                    <span asp-validation-for="Password" style="color:red"></span>
                    </div>
                    </div> *@

                    <div class="col-lg-6 mt-4 hidden-pass " id="patient-confirm-password">
                        <div class="form-floating px-1 confirmPasswordFields">
                            <input type="password" class="grey-back form-control" placeholder=" Password" asp-for="NewPassword">
                            <label for="floatingInput">Confirm Password <sup class="link-danger">*</sup></label>
                            <span asp-validation-for="NewPassword" style="color:red"></span>
                        </div>
                    </div>

                    <div class="col-lg-6 mt-4">
                        <div class="form-floating d-flex h-100">
                            @* <input id="patient-phone-country" asp-for="CountryCode" hidden /> *@

                            <input id="patient-phone" class="py-4 form-control" type="number"  asp-for="PhoneNumber" />
                            <span asp-validation-for="PhoneNumber" style="color:red"></span>
                        </div>

                    </div>
                </div>
                <h4 class="mt-4 ">Employee Location</h4>
                <div class="row ">
                    <div class="col-md-6 mt-4 ">
                        <div class=" floating-label form-floating">
                            <input type="text" class="form-control" placeholder="Street" id="floatingInput" asp-for="PermanentAddress">
                            <label for="floatingInput">PermanentAddress</label>
                        </div>

                    </div>
                    <div class="col-md-6 mt-4 ">
                        <div class="floating-label form-floating">
                            <input type="text" class="form-control" placeholder="City" id="floatingInput" asp-for="CurrentAddress">
                            <label for="floatingInput">CurrentAddress</label>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-12 mt-4">
                        <select asp-for="DepartmentId" class=" form-select" style="height:60px;">
                            <option class="form-floating" disabled selected value="0">Choose department </option>
                            @for (int i = 0; i < Model.departmentRows.Count; i++)
                            {
                                <option value="@Model.departmentRows[i].DepartmentId">@Model.departmentRows[i].Name</option>
                            }
                        </select>

                    </div>
                    <div class="col-lg-6 col-md-6 col-12 mt-4">
                        <select asp-for="DesignationId" class=" form-select" style="height:60px;">
                            <option class="form-floating" disabled selected value="0">Choose designation </option>
                            @for (int i = 0; i < Model.designationRows.Count; i++)
                            {
                                <option value="@Model.designationRows[i].DesignationId">@Model.designationRows[i].Name</option>
                            }
                        </select>

                    </div>
                    <div class="col-lg-6 col-md-6 col-12 mt-4">
                        <select asp-for="RoleId" class=" form-select" style="height:60px;">
                            <option class="form-floating" disabled selected value="0">Choose Role </option>
                            <option value="1">Manager</option>
                            <option value="2">Employee</option>

                        </select>

                    </div>
                    
                    @*  <div class="col-lg-6 col-md-6 col-12 mt-4">
                    <div class="form-floating  floating-label">
                    <input type="number" pattern="[0-9]{5}" title="Five digit zip code" class="form-control"
                    id="" placeholder="Zip/Code" asp-for="Zip" />
                    <Label for="">ZIP Code</Label>
                    </div>

                    </div> *@
                </div>
                <div class="row">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Gender" value="0" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Male
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="1" name="flexRadioDefault" id="flexRadioDefault2" checked>
                        <label class="form-check-label" for="flexRadioDefault2">
                            Female
                        </label>
                    </div>
                </div>
                <h4 class="mt-4 fs-6">Optional(Upload any photo or document)</h4>
                <div class="row px-2">
                    <div class="col-12 mt-4 patient-upload d-flex   p-0">
                        <div class="file-upload w-100  d-flex h-100 justify-content-between">
                            <span id="filename">Select your profile photo file</span>
                            <label for="fileLoader" class="">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ffffff"
                                     class="bi bi-cloud-upload" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd"
                                          d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383" />
                                    <path fill-rule="evenodd"
                                          d="M7.646 4.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V14.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708z" />
                                </svg>
                                Upload
                            </label>
                            <input type="file" id="fileLoader" asp-action="Patient" asp-for="ProfilePhoto">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col mt-4  d-flex justify-content-end">
                        <button onclick="changeCountryCode()" type="submit" class="mx-2 submit">Submit</button>
                        <button type="button" class="mx-2 cancel">Cancel</button>
                    </div>

                </div>



            </div>



        </div>
    </form>
</div>
