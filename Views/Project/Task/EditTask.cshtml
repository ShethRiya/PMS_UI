@model TaskViewModel
<partial name="_Header" />
<partial name="Toaster" />


<div class="container ">
    <div class="row mt-2 mx-0 p-0 w-100">
        <div class="col-md-4 col-4 mx-0 col-lg-4 mt-4">
        </div>
        <div class="col-md-4 col-4 mx-0 col-lg-4 mt-4 d-flex justify-content-center">
            <p class="slogan"><b></b></p>
        </div>
        <div class="col-md-4 p-0 mt-4 col-4 mx-0 col-lg-4 d-flex justify-content-end">
            <div class="btn-back">


                <button class="btn  back  d-flex align-items-center justify-content-center ">
                    <div class="d-flex align-items-center justify-content-center ">


                        <svg xmlns="http://www.w3.org/2000/svg" height="24" fill="#01bce9" viewBox="0 -960 960 960"
                             width="24">
                            <path d="m142-480 294 294q15 15 14.5 35T435-116q-15 15-35 15t-35-15L57-423q-12-12-18-27t-6-30q0-15 6-30t18-27l308-308q15-15 35.5-14.5T436-844q15 15 15 35t-15 35L142-480Z" />
                        </svg>
                        <a asp-controller="Project" asp-action="Project" class="text-center align-items-center"
                           style="color: #01bce9; text-decoration: none;">Back</a>
                    </div>
                </button>
            </div>
        </div>
    </div>
    <form method="post" enctype="multipart/form-data" asp-controller="Project" asp-action="AddTask">


        <div class="row outer-container shadow-lg m-2 mt-4 p-1 ">
            <div class="col m-2">
                <h4 class="fs-6">Project information</h4>
                <div class="row columns ">
                    <div class="col-md-6 mt-4">
                        <div class=" form-floating floating-label">
                            <input type="text" class="form-control" pattern="[A-Za-z]{1,32}" placeholder=" Name" asp-for="@Model.TaskName">
                            <label for="floatingInput">Name <sup class="link-danger">*</sup></label>
                            <span asp-validation-for="@Model.TaskName" style="color:red"></span>
                        </div>

                        <input hidden asp-for="ProjectId" />
                    </div>
                    <div class="form-floating mt-3">
                        <textarea class="form-control " placeholder="Leave a comment here" id="floatingTextarea2"
                                  style="height: 100px" asp-for="@Model.Description"></textarea>
                        <label for="floatingTextarea2" class="ms-2">Enter brief details of task.</label>
                    </div>
                    <div class="col-lg-6 col-md-6 col-12 mt-4">
                        <select asp-for="@Model.TaskCategoryId" class=" form-select" style="height:60px;">
                            @if (Model.PTYDrows != null)
                            {

                                @for (int i = 0; i < Model.PTYDrows.Count; i++)
                                {
                                    <option value="@Model.PTYDrows[i].ProjectCategoryId">@Model.PTYDrows[i].Name</option>
                                }
                            }
                        </select>

                    </div>

                    <div class="col-lg-6 col-md-6 col-12 mt-4">
                        <select asp-for="@Model.Status" class=" form-select" style="height:60px;">



                            <option value="1">Hourly</option>
                            <option value="2">Monthly</option>
                            <option value="3">Completed</option>
                            <option value="4">Started</option>
                            <option value="5">HalfCompleted</option>



                        </select>

                    </div>
                    <div class="col-lg-6 col-md-6 col-12 mt-4">
                        <select asp-for="@Model.Priority" class=" form-select" style="height:60px;">
                            <option class="form-floating" disabled value="0">Choose priority </option>
                            <option value="1">High</option>
                            <option value="2">Low</option>
                            <option value="3">Medium</option>
                        </select>

                    </div>

                </div>
                <div class="row">
                    <div class="mt-4 col-lg-6 col-md-12 col-12 ">
                        <div class="floating-label form-floating">
                            <input type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" id="" placeholder="Start Date" asp-for="@Model.StartDate">
                            <label for="floatingInput">Start Date </label>
                            <span asp-validation-for="StartDate" id="shift-date-error" style="color:red"></span>
                        </div>

                    </div>
                    <div class="mt-4 col-lg-6 col-md-12 col-12 ">
                        <div class="floating-label form-floating">
                            <input type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" id="" placeholder="End Date" asp-for="@Model.EndDate">
                            <label for="floatingInput">End date </label>
                            <span asp-validation-for="EndDate" id="shift-date-error" style="color:red"></span>
                        </div>

                    </div>
                </div>



                <div class="row">
                    <div class="col mt-4  d-flex justify-content-end">
                        <button type="submit" class="mx-2 submit">Submit</button>
                        <button type="button" class="mx-2 cancel">Cancel</button>
                    </div>

                </div>



            </div>



        </div>
    </form>
</div>
